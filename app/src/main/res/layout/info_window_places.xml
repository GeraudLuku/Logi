<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/infoWindow_places_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="@string/image_preview_of_place"
        tools:src="@drawable/test_image" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/infoWindow_places_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="160dp"
        android:textColor="@color/black"
        tools:text="Smiths Location"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/infoWindow_places_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:maxLines="10"
        android:nestedScrollingEnabled="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        tools:text="THIS IS THE DESCRIPTION OF THE AREA CREATED" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/options"
        android:contentDescription="@string/options_icon" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera.FullScreenImageActivity">

    <ImageView
        android:id="@+id/fullScreenImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:contentDescription="@string/change_image_of_user"
        tools:src="@drawable/test_image" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="@string/what_about_this_pic"
        android:inputType="text"
        android:padding="10dp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/descriptionEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="11dp"
        android:layout_toEndOf="@+id/descriptionEditText"
        android:background="@drawable/button"
        android:text="@string/post"
        android:textColor="@android:color/white" />

</RelativeLayout>